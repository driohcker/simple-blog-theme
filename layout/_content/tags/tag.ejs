<!-- 单个标签页面 -->
<div class="archive">
  <!-- 页面标题 -->
  <h1 class="archive-title">
    <%= page.tag %> 标签
  </h1>
  
  <!-- 标签文章列表 -->
  <div class="archive-list">
    <% if (page.posts && page.posts.length > 0) { %>
      <% page.posts.each(function(post) { %>
      <article class="archive-item">
        <!-- 文章链接 -->
        <a href="<%- url_for(post.path) %>" class="archive-item-title">
          <%= post.title %>
        </a>
        
        <!-- 文章日期 -->
        <span class="archive-item-date">
          <%= date(post.date, config.date_format) %>
        </span>
      </article>
      <% }) %>
    <% } else { %>
      <p class="no-posts">该标签下暂无文章</p>
    <% } %>
  </div>
  
  <!-- 分页 -->
  <% if (page.total > 1) { %>
  <div class="pagination">
    <% if (page.prev) { %>
    <a href="<%- url_for(page.prev_link) %>" class="pagination-prev">上一页</a>
    <% } %>
    
    <% for (var i = 1; i <= page.total; i++) { %>
      <a href="<%- url_for(i === 1 ? page.path : page.path + '/page/' + i) %>" 
         class="pagination-item <%= i === page.current ? 'active' : '' %>">
        <%= i %>
      </a>
    <% } %>
    
    <% if (page.next) { %>
    <a href="<%- url_for(page.next_link) %>" class="pagination-next">下一页</a>
    <% } %>
  </div>
  <% } %>
</div>