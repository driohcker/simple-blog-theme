<article class="post">
  <!-- 文章标题 -->
  <h1 class="post-title"><%= page.title %></h1>
  
  <!-- 文章元信息 -->
  <div class="post-meta">
    <span class="post-date"><%= date(page.date, config.date_format) %></span>
    
    <!-- 更新日期 -->
    <% if (page.updated && page.updated > page.date) { %>
    <span class="post-updated">
      更新于: <%= date(page.updated, config.date_format) %>
    </span>
    <% } %>
    
    <!-- 分类 -->
    <% if (page.categories && page.categories.length > 0) { %>
    <span class="post-categories">
      <% page.categories.each(function(category) { %>
      <a href="<%- url_for(category.path) %>"><%= category.name %></a>
      <% }) %>
    </span>
    <% } %>
    
    <!-- 标签 -->
    <% if (page.tags && page.tags.length > 0) { %>
    <span class="post-tags">
      <% page.tags.each(function(tag) { %>
      <a href="<%- url_for(tag.path) %>">#<%= tag.name %></a>
      <% }) %>
    </span>
    <% } %>
  </div>
  
  <!-- 文章内容 -->
  <div class="post-content">
    <%- page.content %>
  </div>
  
  <!-- 文章底部 -->
  <div class="post-footer">
    <!-- 相关文章（可选） -->
    <% if (site.related_posts && site.related_posts.length > 0) { %>
    <div class="related-posts">
      <h3 class="related-title">相关文章</h3>
      <ul class="related-list">
        <% site.related_posts.limit(5).each(function(post) { %>
        <li class="related-item">
          <a href="<%- url_for(post.path) %>"><%= post.title %></a>
        </li>
        <% }) %>
      </ul>
    </div>
    <% } %>
  </div>
</article>

<!-- 评论区域 -->
<% if (theme.comment.enable) { %>
<div class="comments-section">
  <!-- 这里可以添加评论系统代码，如Disqus、Gitalk等 -->
</div>
<% } %>